                    $cotizaciones[] = $cotizacion;
                    \Log::info('Cotizaci√≥n de prueba creada');
                }
            }
            
            \Log::info('Cotizaciones encontradas: ' . count($cotizaciones));
            
            return $cotizaciones;
            
        } catch (\Exception $e) {
